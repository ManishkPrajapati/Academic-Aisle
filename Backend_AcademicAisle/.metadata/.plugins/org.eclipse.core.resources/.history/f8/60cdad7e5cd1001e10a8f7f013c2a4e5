package com.woodworks.project.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.woodworks.project.entities.Customer;
import com.woodworks.project.entities.OrderDetails;
import com.woodworks.project.entities.Product;
import com.woodworks.project.repository.CustomerRepository;
import com.woodworks.project.repository.ProductRepository;
import com.woodworks.project.repository.WishListRepository;

@Service
public class WishListServiceImpl implements WishlistService{
	
	@Autowired
	WishListRepository wishRepo;
	
	@Autowired
	CustomerRepository customerRepo;
	
	@Autowired 
	ProductRepository productRepo;


	public OrderDetails addToWishlist(int customerId, int productId) {
        // Assuming you have Customer and Product entities with proper mappings
        Customer customer = customerRepo.findCustomerById(customerId);
        Product product = productRepo.findProductById(productId);

        if (customer != null && product != null) {
        	OrderDetails wishlist = new OrderDetails();
            wishlist.setCustomer(customer);
            wishlist.setProduct(product);

            wishRepo.save(wishlist);

            // You can return OrderDetails if necessary, or any other response
            return wishlist;
        }

}
}

